{
    "compilerOptions": {
        "target": "ESNext",
        "module": "ES6",
        "skipLibCheck": true,

        /* Bundler mode */
        "moduleResolution": "bundler",
        "allowImportingTsExtensions": true,
        "isolatedModules": true,
        "moduleDetection": "force",
        "noEmit": true,

        // "strict": true, // TODO: enable

        "rootDir": ".",
        "baseUrl": ".",
        "paths": {
            "@fbe/*": ["packages/*/src/index.ts"]
        },

        "typeRoots": ["./node_modules/@types"]
    }
}
