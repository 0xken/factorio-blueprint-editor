{
    "compilerOptions": {
        "pretty": true,
        "sourceMap": true,
        "alwaysStrict": true,
        "removeComments": true,
        "noImplicitAny": true,
        "noUnusedLocals": true,
        "noUnusedParameters": true,
        "preserveConstEnums": true,

        "rootDir": ".",
        "baseUrl": ".",
        "paths": {
            "@fbe/*": ["packages/*/src/index.ts"],
            "mini-signals": ["node_modules/resource-loader/typings/mini-signals.d.ts"]
        },

        "typeRoots": ["./node_modules/@types"]
    }
}
