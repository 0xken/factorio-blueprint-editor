
// Normalize
body
    margin: 0

button
input
select
textarea
  font-family: inherit
  font-size: 100%
  line-height: 1.15
  margin: 0


html
    font-family: 'Roboto', sans-serif
    user-select: none

#loadingScreen
    position: fixed
    top: 0
    bottom: 0
    left: 0
    right: 0
    background-color: #181818
    &.active
        z-index: 10

#logo
    position: fixed
    width: 100%
    height: 100%

#loadingMsg
    position: fixed
    right: 0
    bottom: 0
    color: #FAFAFA
    margin-right: 20px
    text-align: center
    font-weight: normal

.dg.main
    position: fixed
    bottom: 0px
    left: 8px
    z-index: 5

canvas
    position: fixed

#doorbell-button
#doorbell-submit-button
    background-color: #1E88E5
    border: 0
    transition: 0.3s all linear
    &:hover
    &:active
    &:focus
        text-decoration: none
        background: #1E88E5
        opacity: 0.85
        color: #ffffff

#doorbell-submit-button
    box-shadow: 0px 1px 2px 2px rgba(190, 190, 190, 0.5)

#doorbell-button
    z-index: 5
    right: 0
    bottom: 35px
    height: 35px
    width: 100px
    font-family: 'Cookie', cursive
    font-size: 22px
    letter-spacing: 0.6px
    line-height: 36px
    border-radius: 5px 0 0 0
    padding: 1px 9px

#doorbell-form
    box-shadow: none !important
    border: 0
    text-align: right
    fieldset
        text-align: center
        #intro-text
            margin-bottom: 10px

#doorbell-tags
    display: flex
    justify-content: space-between
    margin-bottom: 10px
    div
        font-weight: normal
        cursor: pointer
        border-radius: 4px
        padding: 4px
        color: white
        transition: 0.1s all linear
        &:hover
        &.active
            transform: scale(1.05)
            box-shadow: 0px 1px 2px 2px rgba(190, 190, 190, 0.5)

#bmc-button
    z-index: 5
    position: absolute
    bottom: 0
    right: 0
    width: 110px
    line-height: 36px
    height: 35px
    text-decoration: none
    display: inline-flex
    color: #ffffff
    background-color: #FF813F
    border-radius: 5px 0 0 0
    border: 1px solid transparent
    padding: 1px 9px
    font-size: 22px
    letter-spacing: 0.6px
    margin: 0 auto
    font-family: 'Cookie', cursive
    box-sizing: border-box
    transition: 0.3s all linear

    span
        margin-right: 3px

    img
        width: 27px
        margin-bottom: 1px
        box-shadow: none
        border: none
        vertical-align: middle

    &:hover
    &:active
    &:focus
        text-decoration: none
        opacity: 0.85
        color: #ffffff
