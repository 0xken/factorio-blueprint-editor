{
    "extends": "../../tsconfig.json",
    "compilerOptions": {
        "rootDir": "src",
        "outDir": "dist",

        "target": "es6",
        "module": "es6",
        "moduleResolution": "node",
        "lib": ["dom", "es6", "es2016.array.include", "es2017.object"],

        "declaration": true,
        "declarationMap": true,
        "esModuleInterop": true,
        "resolveJsonModule": true,
        "allowSyntheticDefaultImports": true
    }
}
